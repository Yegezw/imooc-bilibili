<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.imooc.bilibili.dao.FollowingGroupDao">

    <select id="getByType" resultType="com.imooc.bilibili.domain.user.FollowingGroup">
        select *
        from t_following_group
        where `type` = #{type}
    </select>

    <select id="getById" resultType="com.imooc.bilibili.domain.user.FollowingGroup">
        select *
        from t_following_group
        where id = #{id}
    </select>

    <select id="getByUserId" resultType="com.imooc.bilibili.domain.user.FollowingGroup">
        select *
        from t_following_group
        where userId = #{userId} or `type` in ('0', '1', '2')
    </select>

    <insert id="addFollowingGroup" useGeneratedKeys="true" keyProperty="id">
        insert into t_following_group (userId, `name`, `type`, createTime)
        values (#{userId}, #{name}, #{type}, #{createTime})
    </insert>

    <select id="getUserFollowingGroups" resultType="com.imooc.bilibili.domain.user.FollowingGroup">
        select *
        from t_following_group
        where userId = #{userId}
    </select>

</mapper>